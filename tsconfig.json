{
  "compilerOptions": {
    // Enable latest features
    "lib": ["ESNext", "DOM"],
    "target": "ESNext",
    "module": "ESNext",
    "moduleDetection": "force",
    "jsx": "react-jsx",
    "allowJs": true,

    // Bundler mode
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "noEmit": true,

    // Best practices
    "strict": true,
    "skipLibCheck": true,
    "noFallthroughCasesInSwitch": true,

    // Some stricter flags (disabled by default)
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noPropertyAccessFromIndexSignature": false,

    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "Drizzle/Schema/*": ["src/3-Drizzle/1-Schema/*"],
      "Drizzle/EntityRelation/*": ["src/3-Drizzle/2-EntityRelation/*"],
      "Drizzle/ManyToManyRelations/*": ["src/3-Drizzle/3-ManyToManyRelations/*"],
      "Drizzle/Entities/*": ["src/3-Drizzle/4-Entities/*"],
      "CustomSchemas/*": ["src/4-CustomSchemas/*"],
      "Middlewares/*": ["src/2-Middlewares/*"],
      "App/*": ["src/1-App/*"]
    }
  }
}
